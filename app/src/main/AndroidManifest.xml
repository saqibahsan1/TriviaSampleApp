<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.saqib.triviasample">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.TriviaSample"
        tools:targetApi="m">
        <activity android:name="com.saqib.triviasample.MainActivity"/>

        <activity
            android:name=".ui.Splash"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TriviaSample.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".ui.SetupActivity"
            android:theme="@style/Theme.TriviaSample.NoActionBar"/>

        <activity android:name=".ui.Congrats"
            android:theme="@style/Theme.TriviaSample.NoActionBar"/>

        <activity android:name=".ui.QuizActivity"
            android:label="Trivia Quiz"/>

    </application>

</manifest>